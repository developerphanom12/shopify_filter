<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Search</title>
    <style>
        .search-section {
          background: #fff;
          text-align: end;
          padding: 10px;
        }
        input#searchInput {
          padding: 10px;
          border: transparent;
          border-bottom: 1px solid #80808073;
          margin-right: -10px;
        }

        *:focus-visible {
          outline: none;
          box-shadow: none;
        }
        button#searchButton {
          border: none;
          padding: 10px;
          border-bottom: 1px solid #80808073;
          margin: 0px;
          background: #fff;
        }
        .productsearchContainer {
          padding-bottom: 5px;
          width:300px;

      }
        .product-search-section {
          background: #fff;
          display:flex;
          flex-wrap:wrap;
          border: 0.3px solid lightgray;

          {% comment %} padding: 10px; {% endcomment %}
        }
        .search-productshow.slick-initialized.slick-slider {
          width: 100px;
        }
        .search-productshow.slick-list.draggable {
          width: 100px !important;
          height: 100px !important;
          padding:10px 20px;

        }
        .search-productshow.slick-initialized.slick-slider {
            width: 100px;
            margin-left: 28px;
        }
        img.slick-slide.slick-cloned {
          object-fit: contain;
          width: 100px;
          height: 100px;
        }
        h2 {
          font-size: 14px;
          padding: 10px 10px 0px;
          color: #000;
          margin:0px;
        }
        p {
          font-size: 12px;
          padding: 0px 10px 10px  ;
          color: #000;
          margin:0px;

        }
    </style>
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.css">
    <link
      rel="stylesheet"
      type="text/css"
      href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick-theme.css"
    >
  </head>
  <body>
    <div class="search-section">
      <input type="text" id="searchInput" placeholder="Enter product title">
      {% comment %} <button class="btnbutton" id="searchButton">Search </button> {% endcomment %}
      <button class="btnbutton" id="searchButton">
        <svg viewBox="0 0 20 20" class="Icon_Icon__uZZKy" style="width: 20px; height: 20px;">
          <path fill-rule="evenodd" d="M12.323 13.383a5.5 5.5 0 1 1 1.06-1.06l2.897 2.897a.75.75 0 1 1-1.06 1.06l-2.897-2.897Zm.677-4.383a4 4 0 1 1-8 0 4 4 0 0 1 8 0Z"></path>
        </svg>
      </button>
    </div>
    <div class="product-search-section">
      <div class="search-productshow"></div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js" defer></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.min.js" defer></script>
  </body>
</html>
