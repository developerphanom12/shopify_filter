<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Search</title>
    <style>
      div#shopify-block-exampleone_search_qattqz {
        background: #fff;
        display: flex;
        flex-direction: column;
        align-items: flex-end;
      }
      .search-section {
        background: #fff;
        text-align: end;
        padding: 10px;
        width: 100%;
      }
      input#searchInput {
        padding: 10px;
        border: transparent;
        border-bottom: 1px solid #80808073;
        margin-right: -10px;
      }

      *:focus-visible {
        outline: none;
        box-shadow: none;
      }
      button#searchButton {
        border: none;
        padding: 10px;
        border-bottom: 1px solid #80808073;
        margin: 0px;
        background: #fff;
      }
      .productsearchContainer {
        padding-bottom: 5px;
        width: 280px;
        display: flex;
      }
      .product-search-section {
        background: #fff;
        display: flex;
        width: 68%;
        border: 0.3px solid lightgray;
        margin: 0px 20px;
        box-shadow: 0px 3px 6px 0px lightgray;
        overflow-y: auto;  
        position: absolute;
        z-index: 9;
        top: 67px;
        max-height: 250px;
      }
      .product-search-section.large-height {
        overflow-y: scroll;
      }

      .search-productshow.slick-initialized.slick-slider {
        width: 100px;
      }
      .search-productshow.slick-list.draggable {
        width: 100px !important;
        height: 100px !important;
        padding: 10px 20px;
      }
      .search-productshow.slick-initialized.slick-slider {
        width: 50px;
        margin-left: 8px;
        align-items: center;
        display: flex;
      }
      img.slick-slide.slick-cloned {
        object-fit: contain;
        width: 50px;
        height: 50px;
      }
      h2 {
        font-size: 14px;
        padding: 10px 10px;
        color: #000;
        margin: 0px;
      }
      p {
        font-size: 13px;
        padding: 0px 10px 10px;
        color: #000;
        margin: 0px;
      }
      button.slick-next.slick-arrow,
      button.slick-prev.slick-arrow {
        display: none !important;
      }
      .empty-div {
        width: 200px;
        background: #d3d3d330;
        padding: 10px;
      }
      .search-title-parent {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        width: 640px;
        padding: 10px;
      }
    </style>
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.css">
    <link
      rel="stylesheet"
      type="text/css"
      href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick-theme.css"
    >
  </head>
  <body>
    <div class="search-section">
      <input type="text" id="searchInput" placeholder="Enter product title">
      {% comment %} <button class="btnbutton" id="searchButton">Search </button> {% endcomment %}
      <button class="btnbutton" id="searchButton">
        <svg viewBox="0 0 20 20" class="Icon_Icon__uZZKy" style="width: 20px; height: 20px;">
          <path fill-rule="evenodd" d="M12.323 13.383a5.5 5.5 0 1 1 1.06-1.06l2.897 2.897a.75.75 0 1 1-1.06 1.06l-2.897-2.897Zm.677-4.383a4 4 0 1 1-8 0 4 4 0 0 1 8 0Z"></path>
        </svg>
      </button>
    </div>
    <div class="product-search-section">
      <div class="empty-div"></div>
      <div class="search-title-parent">
        <div class="search-productshow"></div>
        <div class="title-price"></div>
      </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js" defer></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.min.js" defer></script>
  </body>
</html>
